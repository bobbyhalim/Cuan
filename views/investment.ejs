<%- include('partial/header') %>
    <center>
        <%- include('partial/navbar') %>
    </center>
            <center>
                <div style="color: white; background-color: green;">
                    Most like investment is <%= notif.max %> and the least like is <%= notif.min %>
                </div>
            </center>
            
    
            <center>
                <form action="/user/home" method="get">
                    <input type="text" name="search">
                    <button>Search</button>
                </form>
            </center>
            
            <div class="container w-80">
                <table class="table mb-10">
                    <thead>
                        <tr>
                            <th scope="col">name</th>
                            <th scope="col">Investment Type</th>
                            <th scope="col">Description</th>
                            <th scope="col">Company</th>
                            <th scope="col">Price</th>
                            <th scope="col">UnitStock</th>
                            <th scope="col">Like</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% investments.forEach(investment=> { %>
                            <tr>
                                <th scope="row">
                                    <%= investment.name %>
                                </th>
                                <td>
                                    <%= investment.investmentType %>
                                </td>
                                <td>
                                    <%= investment.description %>
                                </td>
                                <td>
                                    <%= investment.Company.name %>
                                </td>
                                <td>
                                    <%= investment.formatPrice %>
                                </td>
                                <td>
                                    <%= investment.unitStock %>
                                </td>
                                <td>
                                    <%= investment.like %>
                                </td>
                                <td>
                                    <a href="/user/home/buy/<%= investment.id %>"class="btn btn-success">Invest</a><br><br>
                                    <a href="/user/home/like/<%= investment.id %>" class="btn btn-success">Like</a>
                                </td>
                            </tr>
                            <% }); %>
                                <hr>
                </table>
            </div>
            <%- include('partial/footer') %>